                <!--     <DataGridTextColumn Header="Класс" /> -->
                <!--     <DataGridTextColumn Header="Буква" /> -->
                <!--     <DataGridTextColumn Header="Классный кабинет" /> -->
                <!-- </DataGrid.Columns> -->
            </DataGrid>
            <StackPanel>
                <!-- <Button>+</Button> -->
                <!-- <Button>-</Button> -->
            </StackPanel>
        </StackPanel>
    </StackPanel>

    <Design.DataContext>
        <vm:ClassEditingMenuViewModel />
    </Design.DataContext>

</UserControl>
