<UserControl    x:Class="SchoolTimetabler.Views.SetPassword"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:viewModels="clr-namespace:SchoolTimetabler.ViewModels"    d:DesignHeight="450"    d:DesignWidth="800"    mc:Ignorable="d">    <Grid>        <StackPanel            Margin="30"            HorizontalAlignment="Center"            VerticalAlignment="Top"            Orientation="Vertical">            <TextBlock>                Данное окно отвечает за задание пароля.            </TextBlock>            <TextBlock>Если вы не хотите устанавливать пароль,</TextBlock>            <TextBlock>то нажмите подтвердить, не вводя его.</TextBlock>        </StackPanel>        <StackPanel            HorizontalAlignment="Center"            VerticalAlignment="Center"            Spacing="15">            <Label>Пароль:</Label>            <TextBox                PasswordChar="*"                Text="{Binding Password}"                Watermark="Пароль" />            <Button Command="{Binding Confirm}" Content="Подтвердить" />        </StackPanel>    </Grid></UserControl>