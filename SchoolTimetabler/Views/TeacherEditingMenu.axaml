<UserControl    x:Class="SchoolTimetabler.Views.TeacherEditingMenu"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:local="using:SchoolTimetabler"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="clr-namespace:SchoolTimetabler.ViewModels"    d:DesignHeight="450"    d:DesignWidth="800"    x:DataType="vm:TeacherEditingMenuViewModel"    mc:Ignorable="d">    <UserControl.Resources>        <DataTemplate x:Key="ComboBoxItemTemplate" />    </UserControl.Resources>    <StackPanel Orientation="Vertical" Spacing="5">        <StackPanel HorizontalAlignment="Left" Orientation="Vertical">            <TextBlock>Меню редактирования учителей:</TextBlock>            <StackPanel Orientation="Horizontal">                <Button                    Margin="0,0,0,5"                    Command="{Binding AddNewTeacher}"                    Content="Добавить учителя"                    IsVisible="{Binding IsVisibleAddTeacher}" />                <Button                    Margin="0,0,0,5"                    Command="{Binding Back}"                    Content="Назад"                    IsVisible="{Binding IsVisibleAddDiscipline}" />                <Button                    Margin="20,0,0,5"                    Command="{Binding AddDescipline}"                    Content="Далее" />            </StackPanel>            <DataGrid                Width="700"                Height="700"                AutoGenerateColumns="True"                IsVisible="{Binding IsVisibleDataGrid}"                Items="{Binding Teachers}"                SelectedIndex="{Binding DataGridSelectedIndex}">                <DataGrid.ContextMenu>                    <ContextMenu>                        <MenuItem Command="{Binding DeleteTeacher}" Header="Delete">                            <MenuItem.Icon>                                <Image Source="/Assets/trashcan.png" />                            </MenuItem.Icon>                        </MenuItem>                    </ContextMenu>                </DataGrid.ContextMenu>            </DataGrid>        </StackPanel>        <ComboBox            IsVisible="{Binding IsVisibleAddDiscipline}"            Items="{Binding TeachersName}"            SelectedIndex="{Binding SelectedIndexCheckBox}" />        <ListBox            MaxHeight="200"            IsVisible="{Binding IsVisibleAddDiscipline}"            Items="{Binding DisciplinesName}"            SelectedItems="{Binding SelectedIndexListBox}"            SelectionMode="Multiple, Toggle" />        <Button            Margin="0,10,0,0"            Command="{Binding AddDesciplineToTeacher}"            Content="Добавить дисциплины учителю"            IsVisible="{Binding IsVisibleAddDiscipline}" />    </StackPanel>    <Design.DataContext>        <vm:TeacherEditingMenuViewModel />    </Design.DataContext></UserControl>