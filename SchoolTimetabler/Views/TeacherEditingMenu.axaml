<UserControl    x:Class="SchoolTimetabler.Views.TeacherEditingMenu"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:local="using:SchoolTimetabler"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="clr-namespace:SchoolTimetabler.ViewModels"    d:DesignHeight="450"    d:DesignWidth="800"    x:DataType="vm:TeacherEditingMenuViewModel"    mc:Ignorable="d">    <UserControl.Resources>        <DataTemplate x:Key="ComboBoxItemTemplate" />    </UserControl.Resources>    <StackPanel Orientation="Vertical" Spacing="5">        <StackPanel HorizontalAlignment="Left" Orientation="Vertical">            <TextBlock>Меню редактирования учителей:</TextBlock>            <StackPanel Orientation="Horizontal">                <Button                    Margin="0,0,0,5"                    Command="{Binding AddNewTeacher}"                    Content="Добавить учителя"                    IsEnabled="{Binding IsEnableAddteacher}" />                <Button                    Margin="20,0,0,5"                    Command="{Binding AddDescipline}"                    Content="Добавить дисциплину" />            </StackPanel>            <DataGrid                Width="700"                Height="700"                AutoGenerateColumns="True"                Items="{Binding Teachers}"                SelectedIndex="{Binding DataGridSelectedIndex}"                Tag="{Binding DisciplinesName}">                <DataGrid.ContextMenu>                    <ContextMenu>                        <MenuItem Command="{Binding DeleteTeacher}" Header="Delete">                            <MenuItem.Icon>                                <Image Source="/Assets/trashcan.png" />                            </MenuItem.Icon>                        </MenuItem>                    </ContextMenu>                </DataGrid.ContextMenu>                <DataGrid.Columns>                    <DataGridTemplateColumn Header="Disciplines">                        <DataGridTemplateColumn.CellTemplate>                            <DataTemplate>                                <ListBox                                    Width="200"                                    MaxHeight="100"                                    IsTextSearchEnabled="True"                                    Items="{Binding $parent[DataGrid].Tag}"                                    SelectedIndex="{Binding SelectedIndex}"                                    SelectionMode="Single, Toggle" />                            </DataTemplate>                        </DataGridTemplateColumn.CellTemplate>                    </DataGridTemplateColumn>                </DataGrid.Columns>            </DataGrid>        </StackPanel>    </StackPanel>    <Design.DataContext>        <vm:TeacherEditingMenuViewModel />    </Design.DataContext></UserControl>